{
  "name": "Monthly Rainfall",
  "mapHeader": "Monthly Rainfall",
  "variable": "Rainfall",
  "selector": {
    "period": "month"
  },
  "queryParams": {
    "period": "month"
  },
  "timeseries": {
    "range": ["1990-01", null],
    "handler": "standard_month"
  },

  //layers have units and stuff,
  //get this from handlers
  //basic handlers store a group of layers that are then handled by layer controls
  "layers": [
    {
      "params": ["basic", "stations"],
      "handler": "stations"
    },
    {
      "params": ["basic"],
      "handlers": {
        "query": "value_map",
        "vis": ""
      },
      "handler": "value_map"
    }
  ],

  "layerGroups": [
    {
      "colors": "sequential",
      "range": [0, 650],
      "rangeCapped": [true, false],
      "defaultUnit": "c",
      "units": ["c", "f", "k"],
      "layers": []
    },
    {
      "colors": "sequential",
      "range": [-1, 1],
      "rangeCapped": [true, true],
      "layers": []
    }
  ]



  "experimental": false,
  "banner": null,
  "displayOptions": "data_map",

  "data": [
    {
      "id": "stations",
      "params": ["basic", "stations"],
      "queryHandler": "stations",
      "queryUnits": ["c"],
      "conversionUnits": ["f", "k"]
    }
  ],

  "layers": [
    {
      "descriptor": "station_layer",
      "exclude": [],
      "handlers": [
        {
          "params": ["basic", "stations"],
          "display": "markers",
          "query": "stations",
          "interaction": "stations",
          "units": "convert",
          "overrides": {}
        }
      ]
    },
    {
      "descriptor": "data_map",
      "exclude": [],
      "handlers": [
        {
          "params": ["basic"],
          "display": "raster",
          "query": "dataMap",
          "interaction": "raster",
          "units": "convert",
          "overrides": {}
        }
      ]
    },
    {
      "descriptor": "anom",
      "exclude": ["station_layer"],
      "handlers": [
        {
          "params": ["basic"],
          "display": "raster",
          "query": "anom",
          "interaction": "raster",
          "units": null,
          "overrides": {
            "mapHeader": "Monthly Rainfall Anomaly",
            "variable": "Anomaly",
            "range": [-1, 1],
            "rangeCapped": [true, true],
            "units": null,
            "colors": "sequential"
          }
        }
      ]
    }
  ],
  "layerGroups": [
    ["station_layer"],
    ["data_map", "anom"]
  ]
}
